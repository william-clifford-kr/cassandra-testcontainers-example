root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

[*.java]
# indent_size = 2
# tab_width = 2
insert_final_newline = true

[{*.bash,*.sh,*.zsh}]
# indent_size = 2
# tab_width = 2
insert_final_newline = true

[{*.gant,*.groovy,*.gy}]
# indent_size = 2
# tab_width = 2
insert_final_newline = true

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,bowerrc,jest.config}]
# indent_size = 2

[{*.markdown,*.md}]
insert_final_newline = true
trim_trailing_whitespace = false

[{*.yaml,*.yml}]
# indent_size = 2
insert_final_newline = true
